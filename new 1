int choixClasseA //Garde en memoire le choix de la classe pour chaque personnage
int choixClasseB
int choixClasseC
int actionA //Garde en memoire le choix de l'action pour chaque personnage, reinitialisé a chaque tour de jeu
int actionB 
int actionC

struct jobs{				 //Création de la structures pour gérer les classes
	int pdv;
	int pm;
	int attaque;
	int forceMagique;
}
typedef struct jobs jobs; //La structure gérant les classe sera "jobs"

jobs classe [5]			  //Les cinq classe diffrentes seront utilisées grace a un tableau

jobs chasseur = {"Chasseur",35,50,4,2};      //Creation des classes
jobs mageBlanc = {"Mage blanc",25,125,2,7};
jobs mageNoir = {"Mage Noir",25,125,1,9};
jobs paladin = {"Paladin",95,25,4,1};
jobs voleur = {"Voleur",30,75,3,3};

classe[0]=chasseur;					//"Rangement" des classes dans le tableau
classe[1]=mageBlanc;
classe[2]=mageNoir;
classe[3]=paladin;
classe[4]=voleur;

//Choix de la classe du premier personnage
printf("Quelle classe pour le personnage A ? 1 : Chasseur, 2 : Mage Blanc 3 : Mage Noir, 4 : Paladin, 5 : Voleur "); //Choix de la classe pour le personnage A
scanf("%d", &choixClasseA); 																						 //Choix de la classe pour le personnage A
//Choix de la classe du second personnage
printf("Quelle classe pour le personnage B ? 1 : Chasseur, 2 : Mage Blanc 3 : Mage Noir, 4 : Paladin, 5 : Voleur "); //Choix de la classe pour le personnage A
scanf("%d", &choixClasseB); 
//Choix de la classe du troisieme personnage
printf("Quelle classe pour le personnage C ? 1 : Chasseur, 2 : Mage Blanc 3 : Mage Noir, 4 : Paladin, 5 : Voleur "); //Choix de la classe pour le personnage A
scanf("%d", &choixClasseC); 




//Tour de jeu du personnage A
if(choixClasseA == 1){
	//Ce bloc s'effectura seulement si le personnage a la classe 1
}
else if(choixClasseA == 2){
	//Ce bloc s'effectura seulement si le personnage a la classe 2
}
else if(choixClasseA == 3){
	//Ce bloc s'effectura seulement si le personnage a la classe 3
}
else if(choixClasseA == 4){
	//Ce bloc s'effectura seulement si le personnage a la classe 4
}
else if(choixClasseA == 5){
	//Ce bloc s'effectura seulement si le personnage a la classe 5
}
printf("Quelle action pour le personnage A ?"); //Choix de l'action pour le personnage A
scanf("%d", &actionA); 